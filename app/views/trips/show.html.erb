<h2><%=@trip.title%></h2>
<h3>Road Trip Mileage: <%=@trip.mileage %></h3>
<h3>Destination City: <%=@trip.destination %></h3>
<h3>Travelers on this trip:</h3>
<ol>
<% @trip.travelers.each do |traveler| %>
  <section id="Traveler-<%=traveler.id%>">
    <li><%= traveler.name %></li>
    <%= button_to "Remove Traveler", "/trips/#{@trip.id}/#{traveler.id}", method: :delete %>
  </section>
<% end %>

<h3>Other Trips to this Destination</h3>
  <% @trips.each do |trip| %>
    <% if trip.title != @trip.title %>
      <%=link_to "#{trip.title}", "/trips/#{trip.id}" %><br>
    <% end %>
  <% end %>
